@model MyBook.Models.Contact
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
   

    <title>Contact Form #7</title>
  </head>
  <body>
  

  <div class="content">
    
    <div class="container">
      <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="col-md-8">
          <div class="form h-100">
            <h3>Send us a message</h3>

            <form method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="row">
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Name *</label>
                  <input asp-for="Name" type="text" class="form-control" name="name" id="name" placeholder="Your name">
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Email *</label>
                  <input asp-for="Email" type="text" class="form-control" name="email" id="email"  placeholder="Your email">
                  <span asp-validation-for="Email" class="text-danger"></span>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Phone</label>
                  <input asp-for="PhoneNumber" type="text" class="form-control" name="phone" id="phone"  placeholder="Phone #">
                  <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-5">
                  <label for="" class="col-form-label">Subject</label>
                  <input asp-for="Subject" type="text" class="form-control" name="subject" id="subject"  placeholder="Subject">
                  <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 form-group mb-5">
                  <label for="message" class="col-form-label">Message *</label>
                  <textarea asp-for="Message" class="form-control" name="message" id="message" cols="30" rows="4"  placeholder="Write your message"></textarea>
                  <span asp-validation-for="Message" class="text-danger"></span>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 form-group">
                  <button type="submit"  class="btn btn-primary rounded-0 py-2 px-4 form-control">Send Message</button>
                  <span class="submitting"></span>
                </div>
              </div>
            </form>

            <div id="form-message-warning mt-4"></div> 
            <div id="form-message-success">
              Your message was sent, thank you!
            </div>

          </div>
        </div>
        <div class="col-md-4">
          <div class="contact-info h-100">
            <h3>Contact Information</h3>
            <p class="mb-5">Got a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
            <ul class="list-unstyled">
              <li class="d-flex">
                <span class="wrap-icon icon-room mr-3"></span>
                <span class="text" style="margin-left:8px;"> 199 Sunny Hill, Pristina 10000</span>
              </li>
              <li class="d-flex">
                <span class="wrap-icon icon-phone mr-3"></span>
                <span class="text" style="margin-left:8px;"> +383 045 894 993</span>
              </li>
              <li class="d-flex">
                <span class="wrap-icon icon-envelope mr-10"></span>
                <span class="text" style="margin-left:8px;" > Mybook@gmail.com</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

  </div>
    
    

    <script src="~/Contact_js/jquery-3.3.1.min.js"></script>
    <script src="~/Contact_js/popper.min.js"></script>
    <script src="~/Contact_js/bootstrap.min.js"></script>
    <script src="~/Contact_js/jquery.validate.min.js"></script>
    <script src="~/Contact_js/main.js"></script>@*
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap" rel="stylesheet">*@

    <link rel="stylesheet" href="~/Contact_components/fonts/icomoon/style.css">


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Contact_components/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="~/Contact_components/css/style.css">


  </body>

  @section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
  }